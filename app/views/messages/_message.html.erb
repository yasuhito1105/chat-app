<div class="message">
  <div class="upper-message">
    <div class="message-user">
      <%= message.user.name %>
      <!-- 投稿したユーザー名情報を出力する -->

    </div>
    <div class="message-date">
      <%= message.created_at%>
      <!-- 投稿した時刻を出力する -->
       <%= l message.created_at %>

    </div>
  </div>
  <div class="lower-message">
    <div class="message-content">
      <%= message.content %>
      <!-- 投稿したメッセージ内容を記述する -->

    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    <!--<%= image_tag message.image.variant(resize_to_limit: [500, 500]), class: 'message-image' if message.image.attached? %>-->
  </div>
</div>